run="yarn run dev"
entrypoint = "index.ts"
hidden = [".build", ".config"]
compile = "./.config/build.sh"

[packager]
language = "nodejs-yarn"
[packager.features]
packageSearch = true
guessImports = true

[languages.js]
pattern = "**/*.ts"
[languages.js.languageServer]
start = ["typescript-language-server", "--stdio"]

[nix]
channel = "stable-22_11"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]
